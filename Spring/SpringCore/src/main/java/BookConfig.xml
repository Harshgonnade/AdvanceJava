<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- Create Book Object -IOC -Creating of Objects is out sourced to XML file -->

<bean id="book1" class="com.cdac.training.SpringCore.model.Book">
	
	<!-- Invoke constructor - Dependency Injection using Constructor -->
	
	<constructor-arg value="111" type="int"></constructor-arg>
	<constructor-arg value="Programming with Java" type="String"></constructor-arg>
	<constructor-arg value="Bala Guruswamy" type="String"></constructor-arg>
	<constructor-arg value="BPB Publications" type="String"></constructor-arg>
	<constructor-arg value="250" type="int"></constructor-arg>
</bean>
</beans>
